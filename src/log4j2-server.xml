<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<!-- This is the configuration for the logging server (the debugging laptop) -->
	<Appenders>
		<Console name="Console">
			<PatternLayout pattern="[%d{HH:mm:ss.SSS}] [%t/%level] %msg%n" />
		</Console>
		<RollingRandomAccessFile name="LogFile"
			fileName="latest-server.log" filePattern="logs/%d{yyyy.MM.dd-HH:mm:ss}-server.log.gz">
			<PatternLayout pattern="[%d{HH:mm:ss.SSS}] [%t/%level/%logger] %msg%n" />
			<Policies>
				<OnStartupTriggeringPolicy />
			</Policies>
		</RollingRandomAccessFile>
	</Appenders>
	<Loggers>
		<Root level="all">
			<AppenderRef ref="Console" level="info" />
			<AppenderRef ref="LogFile" level="trace" />
		</Root>
		<Logger name="org.apache.logging.log4j.core.net.server.UdpSocketServer.5400" level="info" additivity="false">
			<AppenderRef ref="Console" level="info" />
			<AppenderRef ref="LogFile" level="warn" />
		</Logger>
		<!--
			How to debug a certain class (or package):
			
			<Logger name="FULLY QUALIFIED CLASS OR PACKAGE HERE" level="all" additivity="false">
				<AppenderRef ref="Console" level="info" />
				<AppenderRef ref="LogFile" level="trace" />
			</Logger>
			
			All logging statements from that class (even trace) will be logged into latest.log
			This only affects the remote log (not the STDOUT log)
			Please do not commit these changes EVER!
		-->
	</Loggers>
</Configuration>
